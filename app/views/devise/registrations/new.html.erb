<h2>Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.collection_radio_buttons :registration_role, [[0, 'Student/TA'] ,[2, 'Instructor'], [3, 'Developer']], :first, :last %>
  <%= f.input :first_name, label: "First Name", required: true %>
  <%= f.input :last_name, label: "Last Name", required: true %>
  <%= f.input :username, label: "Username", hint: "You will use this to log in to scenarios", required: true %>
  <%= f.input :organization, label: "School/Organization", required: true %>
  <%= f.input :email, label: "Email", as: :email, required: true %>
  <%= f.input :password, label: "Password", as: :password, input_html: { autocomplete: 'off' }, hint: "#{@minimum_password_length} characters minimum. Must contain at least 1 uppercase letter, 1 lowercase letter, and 1 number", required: true %>
  <%= f.input :password_confirmation, label: "Confirm password", as: :password, input_html: { autocomplete: 'off' }, required: true %>
  <%= f.input :registration_code, label: "Registration code", hint: "Get this from your instructor", required: true %>
  <%= f.submit "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
